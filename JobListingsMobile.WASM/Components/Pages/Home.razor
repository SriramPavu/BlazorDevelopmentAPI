@page "/"
@using System.ComponentModel.DataAnnotations
@using JobListingsApp.WASM.Models

<h3>Job Listings</h3>

<div class="module-container">

    <div class="pic">
        <img src="https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=1200&q=60"
             alt="picture" />
    </div>

    <div class="top-bar">
        <div class="breadcrumb">Jobs &gt;</div>
        <button class="save-btn">Save</button>
    </div>

    <div class="toolbar">
        <select class="dropdown">
            <option>All Items</option>
        </select>

        <input type="text" class="search-input" placeholder="Search the data below" />
        <button class="filter-btn">🔍</button>
    </div>

    <div class="table-container">
        <table class="item-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                </tr>
            </thead>
        </table>
    </div>
</div>